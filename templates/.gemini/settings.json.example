{
  // GEMINI 設定テンプレート
  // このファイルをコピーして .gemini/settings.json として使用してください
  //
  // 使用方法:
  //   cp templates/.gemini/settings.json.example .gemini/settings.json
  //
  // 注意: このファイルは .gitignore に追加してバージョン管理対象外にしてください

  // === 一般設定 ===
  "general": {
    // 優先エディタ (vscode, cursor, windsurf など)
    "preferredEditor": "vscode"
  },

  // === セキュリティ・認証設定 ===
  "security": {
    "auth": {
      // 認証タイプ: "oauth-personal", "api-key" など
      "selectedType": "oauth-personal"
    }
  },

  // === UI設定 ===
  "ui": {
    // テーマ: "Default", "Dark", "Light" など
    "theme": "Default"
  },

  // === MCP サーバー設定 ===
  "mcpServers": {
    // Serena: コードベース解析・編集
    "serena": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/opt/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "/workspaces/YOUR_PROJECT_NAME"  // プロジェクトパスを変更してください
      ]
    },

    // Playwright: ブラウザ自動化
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },

    // Markitdown: ドキュメント変換
    "markitdown": {
      "command": "markitdown-mcp",
      "args": []
    },

    // ImageSorcery: 画像処理
    "imagesorcery": {
      "command": "imagesorcery-mcp",
      "args": []
    },

    // Filesystem: ファイル操作
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/workspaces/YOUR_PROJECT_NAME"  // プロジェクトパスを変更してください
      ]
    },

    // GitHub: GitHub API統合
    "github": {
      "command": "uvx",
      "args": [
        "mcp-github"
      ]
    },

    // Context7: ドキュメント検索
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    }
  }
}
